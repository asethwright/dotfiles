# This is the default .slate file.
# If no ~/.slate file exists this is the file that will be used.

config   secondsBetweenRepeat             0.1
config   checkDefaultsOnLoad              true
config   focusCheckWidthMax               3000
config   windowHintsShowIcons             true
config   windowHintsBackgroundColor       96;96;64;0.5
config   windowHintsIgnoreHiddenWindows   false
config   windowHintsSpread                true
config   windowHintsSpreadPadding         10
config   windowHintsRoundedCornerSize     3
config   windowHintsSpreadSearchWidth     80
config   windowHintsSpreadSearchHeight    80
config   undoOps                          move,resize

# monitor aliases
alias   mon-laptop          1440x900
alias   mon-asus            2560x1440
alias   mon-hp              1920x1080
alias   mon-laptop-retina   1920x1200

# set up how much padding to be used
alias padding 60
alias adjust (${padding}/2)
alias h-splits 16
alias v-splits 9

# set up the grid
alias grid-x ((screenSizeX/${h-splits}))
alias grid-y ((screenSizeY/${v-splits}))
alias 2-grid-x (2*(screenSizeX/${h-splits}))
alias 2-grid-y (2*(screenSizeY/${v-splits}))
alias 3-grid-x (3*(screenSizeX/${h-splits}))
alias 3-grid-y (3*(screenSizeY/${v-splits}))
alias 4-grid-x (4*(screenSizeX/${h-splits}))
alias 4-grid-y (4*(screenSizeY/${v-splits}))

# sizing aliases
alias   centered-sm      move   screenOriginX+${2-grid-x}+${adjust};screenOriginY+${2-grid-y}+${adjust}      screenSizeX-${4-grid-x}-${padding};screenSizeY-${4-grid-y}-${padding}
alias   centered-med     move   screenOriginX+${grid-x}+${adjust};screenOriginY+${grid-y}+${adjust}          screenSizeX-${2-grid-x}-${padding};screenSizeY-${2-grid-y}-${padding}
alias   centered-lg      move   screenOriginX+${adjust};screenOriginY+${adjust}                              screenSizeX-${padding};screenSizeY-${padding}
alias   normal           move   screenOriginX+((screenSizeX-1180)/2);screenOriginY+((screenSizeY-700)/2)     1180;700
alias   normal-larger    move   screenOriginX+((screenSizeX-1380)/2);screenOriginY+((screenSizeY-1000)/2)    1380;1000

# position aliases
alias   2-contacts        move              screenOriginX+30;screenOriginY+240          150;450                         ${mon-laptop}
alias   2-chat            move              screenOriginX+230;screenOriginY+240         750;450                         ${mon-laptop}
alias   2-top-l           move              screenOriginX;screenOriginY                 screenSizeX/2;screenSizeY/2     ${mon-asus}
alias   2-top-m           move              screenOriginX+screenSizeX/6;screenOriginY   2*screenSizeX/3;screenSizeY/2   ${mon-asus}
alias   2-top-r           move              screenOriginX+screenSizeX/2;screenOriginY   screenSizeX/2;screenSizeY/2     ${mon-asus}
alias   1-contacts        move              screenOriginX+50;screenOriginY+400          150;450                         ${mon-laptop-retina}
alias   1-chat            move              screenOriginX+250;screenOriginY+400         750;450                         ${mon-laptop-retina}
alias   2-centered-med    ${centered-med}   ${mon-asus}
alias   2-centered-lg     ${centered-lg}    ${mon-laptop}
alias   2-normal-laptop   ${normal}         ${mon-laptop}
alias   2-normal-asus     ${normal}         ${mon-asus}

alias   right-sm   move   screenOriginX+10*${grid-x}+${adjust};screenOriginY+${adjust}           6*${grid-x}-${padding};screenSizeY-${padding}
alias   left-sm    move   screenOriginX+${adjust};screenOriginY+${adjust}                        6*${grid-x}-${padding};screenSizeY-${padding}
alias   right-lg   move   screenOriginX+6*${grid-x};screenOriginY+${adjust}                      10*${grid-x}-${adjust};screenSizeY-${padding}
alias   left-lg    move   screenOriginX+${adjust};screenOriginY+${adjust}                        10*${grid-x}-${adjust};screenSizeY-${padding}
alias   right-sm-x move   screenOriginX+10*${grid-x}+${adjust};screenOriginY+${grid-y}+${adjust} 5*${grid-x}-${padding};screenSizeY-2*${grid-y}-${padding}
alias   left-sm-x  move   screenOriginX+${grid-x}+${adjust};screenOriginY+${grid-y}+${adjust}    5*${grid-x}-${padding};screenSizeY-2*${grid-y}-${padding}
alias   right-lg-x move   screenOriginX+6*${grid-x};screenOriginY+${grid-y}+${adjust}            9*${grid-x}-${adjust};screenSizeY-2*${grid-y}-${padding}
alias   left-lg-x  move   screenOriginX+${grid-x}+${adjust};screenOriginY+${grid-y}+${adjust}    9*${grid-x}-${adjust};screenSizeY-2*${grid-y}-${padding}

# 2 Monitor Layout
layout 2monitors 'Messages':SORT_TITLE ${2-contacts} | ${2-chat}
layout 2monitors 'iTerm2':SORT_TITLE ${2-centered-med}
layout 2monitors 'Google Chrome':REPEAT ${2-centered-lg}
layout 2monitors 'iTunes':REPEAT ${2-normal-laptop}
layout 2monitors 'Safari':REPEAT ${2-normal-asus}
layout 2monitors 'MacVim' ${left-lg} ${mon-asus} | ${right-sm} ${mon-asus}

# 1 Monitor Layout
layout 1monitor 'Messages':IGNORE_FAIL,SORT_TITLE ${1-contacts} | ${1-chat}
layout 1monitor 'iTerm2':SORT_TITLE ${centered-lg}
layout 1monitor 'Google Chrome':REPEAT ${centered-lg}
layout 1monitor 'iTunes':REPEAT ${normal}
layout 1monitor 'Safari':REPEAT ${centered-lg}
layout 1monitor 'MacVim' ${left-lg} | ${right-sm}

# default layouts
default 2monitors resolutions:${mon-laptop};${mon-asus}
default 1monitor resolutions:${mon-laptop-retina}

# Resize Bindings
bind   h:ctrl;alt   resize   -10%   +0
bind   l:ctrl;alt   resize   +10%   +0
bind   j:ctrl;alt   resize   +0     +10%
bind   k:ctrl;alt   resize   +0     -10%

# Push Bindings
bind   l:ctrl;cmd   push   right   bar-resize:screenSizeX/2
bind   h:ctrl;cmd   push   left    bar-resize:screenSizeX/2
bind   k:ctrl;cmd   push   up      bar-resize:screenSizeY/2
bind   j:ctrl;cmd   push   down    bar-resize:screenSizeY/2

# Optimized Window Size
bind   z:ctrl;cmd;alt   ${normal}
bind   z:cmd;alt        ${normal-larger}

# Padded push bindings 1x grid
bind   right:ctrl;cmd   ${right-sm-x}
bind   left:ctrl;cmd    ${left-sm-x}
bind   right:alt;cmd    ${right-lg-x}
bind   left:alt;cmd     ${left-lg-x}

# Padded push bindings 0x grid
bind   right:shift;cmd;alt   ${right-lg}
bind   left:shift;cmd;alt    ${left-lg}
bind   right:shift;cmd;ctrl  ${right-sm}
bind   left:shift;cmd;ctrl   ${left-sm}

# Centered sizing
bind   ;:shift;cmd            ${centered-sm}
bind   return:alt;cmd         ${centered-med}
bind   return:shift;alt;cmd   ${centered-lg}

# Change Monitor
bind   1:alt;ctrl   ${centered-lg}    ${mon-laptop}
bind   2:alt;ctrl   ${centered-med}   ${mon-asus}
bind   3:alt;ctrl   ${centered-med}   ${mon-hp}

# Nudge Bindings
bind   right:ctrl   nudge   +1%   +0
bind   left:ctrl    nudge   -1%   +0
bind   up:ctrl      nudge   +0     -1%
bind   down:ctrl    nudge   +0     +1%

# Nudge Bindings
bind   right:ctrl;shift   nudge   +10%   +0
bind   left:ctrl;shift    nudge   -10%   +0
bind   up:ctrl;shift      nudge   +0     -10%
bind   down:ctrl;shift    nudge   +0     +10%

# Show Hints Window
bind   esc:cmd hint

# Relaunch or Change to Layout
bind   2:cmd;shift;alt        layout     2monitors
bind   1:cmd;shift;alt        layout     1monitor

# Refresh config file
bind   backslash:cmd;shift;alt   relaunch
