set folder=""
set markers=no
set folder = ~/Mail/aliases             # mailbox location
set spoolfile = "+Gmail"                           # default inbox

set beep = no
set beep_new = yes

set help = no
set move = no
set delete = yes
set include
set abort_nosubject=no
